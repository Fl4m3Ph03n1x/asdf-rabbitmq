#!/bin/bash

function install_rabbitmq {
	local install_type=$1
	local version=$2
	local install_path=$3

	if [ "$ASDF_INSTALL_TYPE" = "ref" ]; then
		echo "Unsupported installation type"; exit 1
	fi

	if [ "$TMPDIR" = "" ]; then
		local tmp_download_dir=$(mktemp -d)
	else
		local tmp_download_dir=$TMPDIR
	fi

	case "$(uname -s)" in
		Linux*)     os_prefix=rabbitmq-server-generic-unix;;
		Darwin*)    os_prefix=rabbitmq-server-generic-unix;;
		*)          echo "Unsupported OS"; exit 1;;
	esac

	if [[ $version < '3.7.0' ]]; then
		extension=gz
		url=http://www.rabbitmq.com/releases/rabbitmq-server/v$version/$os_prefix-$version.tar.$extension
	else
		extension=xz
		url=https://github.com/rabbitmq/rabbitmq-server/releases/download/v$version/$os_prefix-$version.tar.$extension
	fi

	curl -L $url --output $tmp_download_dir/rabbitmq.tar.$extension

	tar -xzf $tmp_download_dir/rabbitmq.tar.$extension -C $tmp_download_dir && \
		rm $tmp_download_dir/rabbitmq.tar.$extension

	mv $tmp_download_dir/rabbitmq_server-$version/* $install_path
}

install_rabbitmq $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
